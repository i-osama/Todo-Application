<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/category_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/taskDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01-11-2022"
                android:textSize="15sp"
                android:textColor="@color/txt_color"

                android:fontFamily="@font/biorhyme"
                android:paddingStart="8dp"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/taskTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 AM"
                android:textSize="15sp"
                android:textColor="@color/txt_color"

                android:fontFamily="@font/biorhyme"

                android:paddingStart="8dp"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/taskDoneCheckBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your tasks will appear here"
            android:textSize="20sp"
            android:textColor="@color/txt_color"

            android:fontFamily="@font/allerta"
            android:paddingTop="4dp"
            android:paddingStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/taskDoneCheckBox"/>

            <ImageView
                android:id="@+id/taskPriority"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_marginTop="4dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/importace_normal_parameter"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/taskCategoryPersonal"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal"
                    android:fontFamily="@font/allerta"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"

                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/th_c_white"
                    android:background="@drawable/category_1_background" />

                <TextView
                    android:id="@+id/taskCategoryOffice"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Office"
                    android:fontFamily="@font/allerta"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/th_c_white"
                    android:background="@drawable/category_1_background" />
                <TextView
                    android:id="@+id/taskCategoryShopping"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shopping"
                    android:fontFamily="@font/allerta"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/th_c_white"
                    android:background="@drawable/category_1_background" />
                <TextView
                    android:id="@+id/taskCategoryHealth"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="health"
                    android:fontFamily="@font/allerta"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/th_c_white"
                    android:background="@drawable/category_1_background" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>